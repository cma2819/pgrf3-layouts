{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "oneOf": [
            {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": { "type": "string" },
                    "score": {
                        "oneOf": [
                            { "type": "number" },
                            { "type": "null" }
                        ]
                    }
                },
                "required": ["id", "score"]
            }
        ]
    }
}